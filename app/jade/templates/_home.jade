.container
	header#page-intro
		section#branding
			img(src="images/logo-amd.png", alt="AMD - MxGPUI")
			| MxGPUI
		// #branding
		section#page-navigation
			h1#page-title
				img(src='images/icon-server.png', alt='Server Icon')
				|  Server 02
			// #page-title
			#action-dropdown.dropdown
				button#dropdownMenu1.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true')
					| Actions 
					i.fa.fa-angle-down(aria-hidden='true')
				ul.dropdown-menu(aria-labelledby='dropdownMenu1')
					li
						a(href='#') Start
					li
						a(href='#') Pause
					li
						a(href='#') Stop
			// #action-dropdown
			ul#page-tabs.parent.nav.nav-tabs(role='tablist')
				li.active(role='presentation')
					a(href='#configure', aria-controls='configure', role='tab', data-toggle='tab') Configure
				li(role='presentation')
					a(href='#monitor', aria-controls='monitor', role='tab', data-toggle='tab') Monitor 
			// #page-tabs
		// #page-navigation
	// header
	main
		.tab-content
			#monitor.tab-pane(role='tabpanel')
			// #monitor
			#configure.tab-pane.active(role='tabpanel')
				.column
					#vm-gpu-component
						section.component-header
							ul.child.nav.nav-tabs(role='tablist')
								li.active(role='presentation')
									a(href='#vm', aria-controls='vm', role='tab', data-toggle='tab') VM
								li(role='presentation')
									a(href='#gpu', aria-controls='gpu', role='tab', data-toggle='tab') GPU
							// .child
						// .component-header
						section.component-content
							.tab-content
								#vm.tab-pane.active(role='tabpanel')
									header#vm-header
										.pane-actions
											button.btn.btn-default(type='button') Auto Assign
											button.btn.btn-default.disabled(type='button') Apply
										// .pane-actions
									// header#vm-header		
									section#vm-listing
										ul
											li#SallyBridge01
												.machine-header
													span Virtual Machine
													h2 SallyBridge01
												.machine-action
													span Assigned to
														strong GPU
													select.selectpicker
														option(selected='') 1
														option 2
														option No GPU
											// end of #SallyBridge01
											li#Transformer02
												.machine-header
													span Virtual Machine
													h2 Transformer02
