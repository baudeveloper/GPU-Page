													span Virtual Machine
													h2 Shockwave09
												.machine-action
													span Assigned to
														strong GPU
													select.selectpicker
														option 1
														option(selected='') 2
														option No GPU
											// end of #Shockwave09
											li#Textile08
												.machine-header
													span Virtual Machine
													h2 Textile08
